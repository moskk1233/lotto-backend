generator client {
  provider = "prisma-client-js"
  output   = env("PRISMA_CLIENT_OUT")
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  user
  admin
}

enum UserStatus {
  pending
  approved
}

enum PrizeStatus {
  unclaim
  claimed
}

model Users {
  id       Int        @id @default(autoincrement())
  username String     @unique @db.VarChar(255)
  password String     @db.VarChar(255)
  email    String     @unique @db.VarChar(255)
  phone    String     @unique @db.VarChar(10)
  money    Decimal    @default(0) @db.Decimal(10, 0)
  role     UserRole   @default(user)
  status   UserStatus @default(pending)

  tickets LotteryTickets[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LotteryTickets {
  id           Int    @id @default(autoincrement())
  ticketNumber String @unique @db.Char(6)
  price        Int

  prize Prizes?

  ownerId Int?
  owner   Users? @relation(fields: [ownerId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prizes {
  id               Int         @id @default(autoincrement())
  prizeRank        Int
  prizeDescription String      @db.VarChar(255)
  prizeAmount      Decimal     @db.Decimal(10, 0)
  status           PrizeStatus @default(unclaim)

  winningTicketId Int            @unique
  winningTicket   LotteryTickets @relation(fields: [winningTicketId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
